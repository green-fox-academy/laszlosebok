@model List<TodoApp.Models.Todo>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Todo App</title>
</head>
<body>
<div class="header">
    <h1>Todo Application v4882</h1>
</div>
<div class="navigation">
    <nav>
        <a href="/add" class="button">New Todo</a>
    </nav>
</div>
<div class="todo-container">
    <table border="1">
        <thead>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>urgent</th>
            <th>done</th>
            <th>creation date</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.Urgent</td>
                <td>@todo.Done</td>
                <td>@todo.GetFormattedCreationDate()</td>
                <td><a href="/delete/@todo.Id">delete</a></td>
                <td><a href="/edit/@todo.Id">edit</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
</body>
</html>